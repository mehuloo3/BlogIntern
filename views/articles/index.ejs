<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/public/css/style.css">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Blog Website</title>
    <style>
        body {
            background-color: #F1FADA;
            font-family: Arial, Helvetica, sans-serif;
        }

        .header {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;

        }

        .footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .footer p {
            margin-bottom: 0;
        }
    </style>
</head>

<body>
    <header class="header">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <span class="logo">BlogWebsite</span>
                </div>
            </div>
        </div>
    </header>
    <div class="container py-4">
        <h1 class="mb-4 display-1 text-center">Blog Website</h1>
        <a href="/articles/new" class="btn btn-success mb-4">Create Article</a>

        <% articles.forEach(article=> { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= article.title %>
                    </h4>
                    <h6 class="card-subtitle text-muted mb-3">Published on <%= article.createdAt.toLocaleDateString() %>
                    </h6>
                    <p class="card-text mb-3">
                        <%= article.description %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <div>
                            <a href="articles/edit/<%= article.id %>" class="btn btn-info me-2">Edit</a>
                            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 BlogWebsite Website. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>